<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" ng-app="myApp" class="document-view content">

    <my-widget>
      <div id="one" class="box"></div>
      <div id="two" class="box"></div>    
    </my-widget>

    <div class="container-fluid" ng-controller="FruitsListCtrl">
      <div class="row-fluid">
        <div class="span2">
          <!--Sidebar content-->

          Search: <input ng-model="query">
          Sort by:
          <select ng-model="orderProp">
            <option value="name">Alphabetical</option>
            <option value="calories">Most caloric</option>
          </select>

        </div>
        <div class="span10">
          <!--Body content-->

          <ul class="fruits">
            <li ng-repeat="fruit in fruits | filter:query | orderBy:orderProp">
              <a href="#/fruits/{{fruit.id}}">{{fruit.name}}</a>
            </li>
          </ul>

        </div>
      </div>
    </div>
  </article>

</html>
